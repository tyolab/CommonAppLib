<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tyodroid_page_progress_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:visibility="visible"
    android:background="@color/pageProgressPageBackground"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingTop="@dimen/progress_view_padding"
        android:paddingBottom="@dimen/progress_view_padding"
        android:paddingLeft="@dimen/progress_view_padding_left"
        android:paddingRight="@dimen/progress_view_padding_right"
        android:background="@drawable/progress_bg_light"
        >
        <ProgressBar
            style="?android:progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:indeterminateBehavior="repeat"
            android:id="@+id/tyodroid_progress_bar"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_progress_info"
            android:text="running"
            android:layout_marginTop="@dimen/progress_info_margin_top"
            />
    </LinearLayout>

</FrameLayout>