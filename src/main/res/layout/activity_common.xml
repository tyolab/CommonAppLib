<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_padding_top"
    >

    <include layout="@layout/toolbar"
        android:id="@+id/tyodroid_toolbar"
        />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/tyodroid_drawers"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/page"
                />

            <FrameLayout
                android:id="@+id/tyodroid_page_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:visibility="visible"
                android:background="@color/pageProgressPageBackground"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ProgressBar
                        style="?android:progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:indeterminateBehavior="repeat"
                        android:id="@+id/tyodroid_progress_bar"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_progress_info"
                        android:text="running"
                        android:layout_marginTop="@dimen/progress_info_margin_top"
                        />
                </LinearLayout>

            </FrameLayout>

            <!-- Alternatively -->
            <!--
            <include layout="@layout/page_with_progressbar"
                android:id="@+id/activity_page_view"
                />
                -->

        </RelativeLayout>


        <FrameLayout
            android:id="@+id/left_drawer_view"
            android:layout_width="@dimen/drawer_left_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start"
            >

            <!--
            <include layout="@layout/left_drawer_view" />
             -->
        </FrameLayout>

        <FrameLayout
            android:id="@+id/right_drawer_view"
            android:layout_width="@dimen/drawer_right_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="end"
            >

            <!--
            <include layout="@layout/right_drawer_view" />
              -->
        </FrameLayout>

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>