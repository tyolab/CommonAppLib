<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppStyle">

    </style>

    <style name="AppStyle.Header">
        <!--
        <item name="android:windowBackground">@color/header_background_color</item>
    	<item name="android:colorBackground">@color/header_background_color</item>
    	-->
    	<item name="android:background">@color/header_background_color</item>
    </style>
    
    <style name="AppStyle.Body">
        <!--
        <item name="android:windowBackground">@color/body_background_color</item>
    	<item name="android:colorBackground">@color/body_background_color</item>
    	-->
    	<item name="android:background">@color/body_background_color</item>
    </style> 
    
    <style name="AppStyle.Footer">
        <!--
        <item name="android:windowBackground">@color/footer_background_color</item>
    	<item name="android:colorBackground">@color/footer_background_color</item>
    	-->
    	<item name="android:background">@color/footer_background_color</item>
    </style>

    <style name="AppStyle.Suggestion">

    </style>

    <style name="AppStyle.Suggestion.Text">
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
    </style>

    <style name="AppStyle.Widget.ProgressBar.Inverse" parent="@android:style/Widget.ProgressBar.Inverse">
    </style>

    <style name="AppStyle.Widget.ProgressBar" parent="@android:style/Widget.ProgressBar">
    </style>

    <style name="AppStyle.Menu" parent="@style/Widget.AppCompat.ActionButton.Overflow" >

    </style>

    <style name="AppStyle.Menu.Light">

    </style>

    <style name="AppStyle.Menu.Dark">

    </style>

    <style name="AppStyle.Toolbar">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation" tools:ignore="NewApi">2dp</item>
    </style>

    <style name="AppStyle.Toolbar.Light">
        <item name="android:titleTextColor" tools:ignore="NewApi">@color/black</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppStyle.Toolbar.Dark">
        <item name="android:titleTextColor" tools:ignore="NewApi">@color/white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="AppStyle.Splash">

    </style>

    <style name="AppStyle.Splash.Icon">
        <item name="android:src">@mipmap/splash_icon</item>
    </style>

    <style name="AppStyle.ProgressBar">

    </style>

    <style name="AppStyle.ProgressBar.Background">
        <item name="android:layout_marginTop">@dimen/progress_view_margin</item>
        <item name="android:layout_marginBottom">@dimen/progress_view_margin</item>
        <item name="android:layout_marginLeft">@dimen/progress_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/progress_view_margin_right</item>
    </style>

    <style name="AppStyle.ProgressBar.Box">
        <item name="android:background">@color/pageProgressPageBackground</item>
        <item name="android:paddingTop">@dimen/progress_view_padding</item>
        <item name="android:paddingBottom">@dimen/progress_view_padding</item>
        <item name="android:paddingLeft">@dimen/progress_view_padding_left</item>
        <item name="android:paddingRight">@dimen/progress_view_padding_right</item>
    </style>

</resources>
