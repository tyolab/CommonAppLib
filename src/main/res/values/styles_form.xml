<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppStyle.Form.Group">

        <item name="android:background">?attr/formBackgroundStyle</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="AppStyle.Form.FieldTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppStyle.Form.GroupTitle">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/form_row_padding_left</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorPrimaryTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppStyle.Form.LabelField">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_selectable</item>
    </style>

</resources>