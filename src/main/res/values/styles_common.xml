    <style name="CommonAlertDialog.Light" parent="Theme.AppCompat.Light.Dialog" >

        <item name="colorPrimary">@color/theme_light_text_color</item>
        <item name="colorPrimaryDark">@color/theme_dark_text_color</item>

        <item name="android:windowBackground">@color/dialog_background_color_light</item>
