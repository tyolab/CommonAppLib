        <item name="android:textColorPrimary">@color/theme_dark_text_color</item>
        <item name="android:textColorSecondary">@color/theme_dark_text_color</item>

        <!-- This is the one will change the text color of radiobutton in the listview-->
        <item name="android:textColorAlertDialogListItem">@color/theme_dark_text_color</item>

        <item name="android:textAppearanceListItem">@style/CommonTextAppearance.Dark</item>
        <item name="android:textAppearance">@style/CommonTextAppearance.Dark</item>
    </style>


