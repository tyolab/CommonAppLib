        <item name="colorAccent">#FFC107</item>

        <item name="android:textColorPrimary">@color/theme_light_text_color</item>
        <item name="android:textColorSecondary">@color/theme_light_text_color</item>

        <item name="android:textAppearanceListItem">@style/CommonTextAppearance.Light</item>
    </style>

    <style name="CommonAlertDialog.Dark" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorPrimary">@color/theme_dark_text_color</item>
        <item name="colorPrimaryDark">@color/theme_dark_text_color</item>

        <item name="android:windowBackground">@color/dialog_background_color_dark</item>
